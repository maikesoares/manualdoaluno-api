{
  "openapi": "3.0.0",
  "informacao": {
    "title": "Manual do Aluno API",
    "description": "API responsável por gerenciar todo o conteúdo do app Manual do Aluno",
    "version": "1.0.0"
  },
  "paths": {
    "/info": {
      "get": {
        "tags": ["Informações"],
        "summary": "Obter toda as informações",
        "responses": {
          "200": {
            "description": "Retorna uma lista de informações",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/info"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/info/{id}": {
      "put": {
        "tags": ["Informações"],
        "summary": "Atualizar uma informação",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID da informação a ser atualizada",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/infoInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Informação atualizada com sucesso"
          },
          "404": {
            "description": "Informação não encontrada"
          },
          "500": {
            "description": "Falha ao atualizar o registro da informação"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "info": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID da Informação"
          },
          "title": {
            "type": "string",
            "description": "Titulo da Informação"
          },
          "description": {
            "type": "string",
            "description": "Descrição da Informação"
          }
        }
      },
      "infoInput": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Titulo da Informação"
          },
          "description": {
            "type": "string",
            "description": "Descriçao da Informação"
          }
        }
      }
    }
  }
}
